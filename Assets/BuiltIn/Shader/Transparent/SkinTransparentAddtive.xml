<shaderConfig name="SkinTransparentAddtive" baseShader="TRANSPARENT_ADD_COLOR">
	<uniforms>
		<vs>
			<uniform name="uMvpMatrix" type="WORLD_VIEW_PROJECTION" value="0" float="16" matrix="true"/>
			<uniform name="uBoneMatrix" type="BONE_MATRIX" value="0" float="16" array="64" matrix="true"/>
			<uniform name="uUVScale" type="MATERIAL_PARAM" valueIndex="0" value="1.0, 1.0, 0.0, 0.0" float="4"/>
		</vs>
		<fs>
			<uniform name="uTexDiffuse" type="DEFAULT_VALUE" value="0" float="1" directX="false"/>
			<uniform name="uColor" type="MATERIAL_PARAM" valueIndex="1" value="1.0, 1.0, 1.0, 1.0" float="4"/>
			<uniform name="uColorIntensity" type="MATERIAL_PARAM" valueIndex="3" value="1.0, 1.0, 1.0, 1.0" float="4"/>
		</fs>
	</uniforms>
	<customUI>
		<ui control="UIGroup" name="Texture">
			<ui control="UITexture" name="uTexDiffuse" autoReplace="_diff.tga"/>
			<ui control="UIColor" name="uColor"/>
			<ui control="UIFloat4" name="uColorIntensity" elementName="R;G;B;A" min="0" max="3"/>
		</ui>
		<ui control="UIGroup" name="Customize">
			<ui control="UIFloat4" name="uUVScale" elementName="UV ScaleX;UV ScaleY;UV OffsetX;UV OffsetY"/>
		</ui>
	</customUI>
	<shader type="GLSL" vs="GLSL/SkinTransparentColorVS.glsl" fs="GLSL/TransparentColorFS.glsl"/>
	<shader type="HLSL" vs="HLSL/SkinTransparentColorVS.hlsl" fs="HLSL/TransparentColorFS.hlsl"/>
</shaderConfig>